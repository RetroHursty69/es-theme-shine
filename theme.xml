<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <zIndex>4</zIndex>	      
        <type>vertical</type>
        <pos>-0.01 0.0</pos>
        <size>1 1</size>
        <logoScale>1.05</logoScale>
        <logoSize>0.25 0.25</logoSize>
        <color>00000000</color>
        <maxLogoCount>5</maxLogoCount>
		<logoAlignment>left</logoAlignment>        
      </carousel> 
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>1</zIndex>                 
         <path>./_inc/images/main.png</path>
      </image>  	  
      <text name="systemInfo">     
         <pos>0.26 0.895</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>ffffff</color>
         <fontPath>./_inc/fonts/SugarpunchDEMO.otf</fontPath>
	     <fontSize>0.075</fontSize>
         <zIndex>6</zIndex>	     
      </text>            
   </view>
</feature>


<!--
On Screen help
-->

   <view name="system,">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/ClubbedToLife-aemJ.ttf</fontPath>
         <fontSize>0.035</fontSize>     
         <pos>1.19 0.935</pos>      
         <textColor>f700e8</textColor>
         <iconColor>f700e8</iconColor>
      </helpsystem>
   </view>  
  
   <view name="basic,detailed,video">
