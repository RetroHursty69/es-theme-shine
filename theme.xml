         <fontSize>0.03</fontSize>     
         <pos>1.14 0.959</pos>      
         <textColor>f700e8</textColor>
         <iconColor>f700e8</iconColor>
      </helpsystem>
   </view> 
  
<!--
System Gamelist
--> 

   <view name="detailed,video">
      <textlist name="gamelist">
         <zIndex>6</zIndex>	      
         <selectorColor>ffffff</selectorColor> 
	     <selectedColor>000000</selectedColor>     
         <pos>0.01 0.192</pos>
         <size>0.265 0.799</size>
         <primaryColor>000000</primaryColor>
         <secondaryColor>000000</secondaryColor>
         <fontPath>./_inc/fonts/ClubbedToLife-aemJ.ttf</fontPath>
         <fontSize>0.037</fontSize>
         <forceUppercase>1</forceUppercase>
		 <lineSpacing>1.3</lineSpacing>
         <scrollSound></scrollSound>
         <alignment>left</alignment>      
      </textlist>
   </view>   
    
   <view name="basic">
      <textlist name="gamelist">
